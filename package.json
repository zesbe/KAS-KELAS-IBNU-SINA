{
  "name": "expense-tracker-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "install:frontend": "npm install --workspace=frontend",
    "install:backend": "npm install --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend 2>/dev/null || true",
    "build": "npm run build:frontend",
    "start:frontend": "npm run serve --workspace=frontend",
    "start:backend": "npm run start --workspace=backend",
    "start": "npm run start:frontend",
    "dev:frontend": "npm run start --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}